<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MenuPrincipal">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lectura de Suministro"
        android:id="@+id/btLecturaSuministro"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Busqueda por Suministro"
        android:id="@+id/btBusquedaSuministro"
        android:layout_below="@+id/btLecturaSuministro"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btLecturaSuministro"
        android:layout_alignEnd="@+id/btLecturaSuministro" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modificar Lectura"
        android:id="@+id/btModificarLectura"
        android:layout_below="@+id/btBusquedaSuministro"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btBusquedaSuministro"
        android:layout_alignEnd="@+id/btBusquedaSuministro" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CAMARA"
        android:id="@+id/btCamara"
        android:layout_below="@+id/btModificarLectura"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btModificarLectura"
        android:layout_alignEnd="@+id/btModificarLectura" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cargar Suministros"
        android:id="@+id/btCargarSuministro"
        android:layout_below="@+id/btCamara"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btCamara"
        android:layout_alignEnd="@+id/btCamara" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Envio. Suministro"
        android:id="@+id/btEnvioSuministro"
        android:layout_below="@+id/btCargarSuministro"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btCargarSuministro"
        android:layout_alignEnd="@+id/btCargarSuministro" />


</RelativeLayout>
